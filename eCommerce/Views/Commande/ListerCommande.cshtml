@model IEnumerable<eCommerce.Entity.Commande>

@{
    ViewBag.Title = "ListerCommande";
}

<h2>ListerCommande</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Commande du :")
        </th>
        <th>
            @Html.DisplayName("Préparée le :")
        </th>
        <th>
            @Html.DisplayName("Livré le :")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCommande)
            </td>

            @if (item.DatePreparation == null)
            {
                <td>Pas encore préparé</td>

            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.DatePreparation);
                </td>

            }


            @if (item.DateEnvoi == null)
            {
                <td>
                    Pas encore préparé
                </td>
            }
            else
            {
                <td>@Html.DisplayFor(modelItem => item.DateEnvoi);</td>
            }

            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
