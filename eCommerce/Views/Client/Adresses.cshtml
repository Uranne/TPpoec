@model List<SelectListItem>
@{
    ViewBag.Title = "Adresses";
}

<h2>Adresses</h2>
@using (Html.BeginForm())
{
    <div class="form-control row">
        <div class="col-sm-6">
            @Html.DisplayName("Livraison :")
            @Html.DropDownList("idLivraison", (List<SelectListItem>)ViewBag.Livraison)
        </div>
        <div class="col-sm-6">
            @Html.DisplayName("Paiement :")
            @Html.DropDownList("idPaiement", (List<SelectListItem>)ViewBag.Paiement)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Valider" class="btn btn-default" />
        </div>
    </div>
}
<div>
    @Html.ActionLink("Nouvelle Adresse", "CreerAdresse")
</div>

